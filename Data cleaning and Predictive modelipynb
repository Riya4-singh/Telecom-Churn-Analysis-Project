    "# Cell 4: Create and train the model\n",
    "model = LogisticRegression(max_iter=5000)\n",
    "\n",
    "print(\"Training the model...\")\n",
    "model.fit(X_train, y_train)\n",
    "print(\"Model training complete.\")"
